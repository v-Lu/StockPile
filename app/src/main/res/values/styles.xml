<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
    </style>

    <style name="actionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/stock_logo</item>
        <item name="android:background">@drawable/ab_solid_example</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_solid_example</item>
    </style>

    <style name="stockSearchStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/back_button</item>
    </style>

</resources>
