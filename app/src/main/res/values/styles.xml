<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/stockSearchActionBar</item>
    </style>


    <style name="stockSearchStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/back_button</item>

    </style>

    <!-- ActionBar styles -->
    <style name="stockSearchActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:labelTextSize">30dp</item>
        <item name="android:background">@style/stockSearchActionBarBGColor</item>
    </style>

    <style name="stockSearchActionBarBGColor">
        <item name="android:colorBackground">@color/material_deep_teal_200</item>
    </style>
</resources>
